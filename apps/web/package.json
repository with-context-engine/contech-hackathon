  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@next/bundle-analyzer": "14.2.33",
    "@repo/tsconfig": "workspace:*",
    "@types/node": "20.14.15",
    "@types/react": "^19.0.7",
